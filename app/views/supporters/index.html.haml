%h3 Supporters

%table.table.table-striped
  %tr
    %th Name
    %th Email
    %th Phone
    %th Actions

  - @supporters.each do |supporter|
    %tr
      %td= supporter.name
      %td= supporter.email
      %td= supporter.phone
      %td
        -# %a= link_to 'Show', supporter 
        -# \|
        %a= link_to 'Edit', edit_supporter_path(supporter) 
        \|
        %a= link_to 'Delete', supporter, :method => :delete, :data => { :confirm => "Are you sure you would like to delete #{supporter.name}?"}

%br

= link_to 'New Supporter', new_supporter_path, class: 'btn btn-default'
= link_to 'Import contacts from GMail', '/contacts/gmail', class: 'btn btn-default'
