= bootstrap_form_for @letter, url: @letter.crud_path, method: @letter.crud_form_action do |f|
  - if @letter.errors.any?
    #error_explanation
      %h2= "#{pluralize(@letter.errors.count, "error")} prohibited this letter from being saved:"
      %ul
        - @letter.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.text_field :subject
  .field
    = f.text_area :text, id: 'letter_text', style: "height:400px"
  .actions
    = f.submit 'Save', class: 'btn btn-primary'
:javascript
  $(document).ready(function() {
    $('#letter_text').wysihtml5();
  });
